const os = require('os');
const fs = require('fs');
const spawn = require('child_process').spawn;


/*const pwd = spawn('pwd', []);*/
var path = "/home/pi/Music/"
console.log("Path to Music is: " + path);
const ls = spawn('ls', [, path]);

//TODO: list the mp3s in ~/Music
//TODO: Read those filenames from stdout into an array.
//TODO: play the first file.

ls.stdout.on('data', (data) => {
	console.log(`stdout: ${data}`);
});

ls.stderr.on('data', (data) => {
	console.log(`stderr: ${data}`);
});

ls.on('close', (code) => {
	console.log(`child prcess exited with code ${code}`);
});

